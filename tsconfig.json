{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "esnext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "strict": true,
    "lib": [
      "dom",
      "es6"
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*.ts",
  ],
  "files": [
    "src/index.ts"
  ]
}